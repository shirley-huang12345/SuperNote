<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="172dp"
    android:layout_marginTop="10dp"
    android:background="#00000000" >

    <ImageView
        android:id="@+id/page_cover"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:id="@+id/page_add_icon"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/asus_mywave3_page_new" />
	
     <TextView
         android:id="@+id/page_remove_tip"
         android:layout_width="match_parent"
          android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="105dp"
         android:background="#00000000"
         android:ellipsize="end"
         android:gravity="center"
         android:text="@string/remove_from_jump"
         android:textColor="#9b9a9b"
         android:textSize="18dp"/>
     
    <TextView
        android:id="@+id/page_add_text"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="143dp"
        android:background="#00000000"
        android:ellipsize="end"
        android:paddingTop="0dp"
        android:gravity="center_horizontal|top"
        android:maxLines="2"
        android:textColor="#3C3C3C"
        android:textSize="15dp"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/add_notebook_cover_mask"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/asus_ep_page_pressed_selector" />

</FrameLayout>