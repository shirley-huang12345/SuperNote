<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editor_func_bar_scribble_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0px" > 

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="start|center_vertical"
        android:orientation="horizontal">

         <Button
	            android:id="@+id/note_kb_scribble"
	            android:layout_width="60dp"
	            android:layout_height="match_parent"
	            android:layout_marginStart="24dp"
	            android:background="@drawable/scribble_mode_selector"
	            android:gravity="center_horizontal"
	            android:maxLines="0"
	            android:text="@string/editor_func_button_scribble"/>
	
	        <Button
	            android:id="@+id/note_kb_keyboard"
	            android:layout_width="60dp"
	            android:layout_height="match_parent"
	            android:background="@drawable/type_mode_selector"
	            android:gravity="center_horizontal"
	            android:maxLines="0"
	            android:text="@string/editor_func_button_keyboard"/>
	
	        <Button
	            android:id="@+id/note_kb_doodle"
	            android:layout_width="60dp"
	            android:layout_height="match_parent"
	            android:background="@drawable/doodle_mode_selector"
	            android:gravity="center_horizontal"
	            android:maxLines="0"
	            android:text="@string/editor_func_button_doodle"/>

        <Button
            android:id="@+id/note_kb_color_bold"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:paddingTop="@dimen/bottom_button_padding_top"
            android:background="@drawable/function_bar_item_press_selector"
            android:layout_gravity="center"
            android:maxLines="0"
            android:text="@string/editor_func_button_color" />
        
        <ToggleButton
            android:id="@+id/note_kb_write_to_type"
            android:layout_width="34.5dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:background="@drawable/recognize_press_selector"
            android:layout_gravity="center"
            android:maxLines="0"
            android:textOn="@string/editor_func_button_recognize"
            android:textOff="@string/editor_func_button_recognize" />
                
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="end|center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/note_kb_undo"
            android:layout_width="34.5dp"
            android:layout_height="match_parent"
            android:background="@drawable/no_bg"
            android:drawableTop="@drawable/undo_press_selector"
            android:layout_gravity="center"
            android:maxLines="0"
            android:text="@string/editor_func_button_undo" />

  		<Button
            android:id="@+id/note_kb_redo"
            android:layout_width="34.5dp"
            android:layout_height="match_parent"
            android:layout_marginStart="22dp"
            android:background="@drawable/no_bg"
            android:drawableTop="@drawable/redo_press_selector"
            android:layout_gravity="center"
            android:maxLines="0"
            android:text="@string/editor_func_button_redo" />

  		<Button
            android:id="@+id/note_kb_s_more"
            android:layout_width="34.5dp"
            android:layout_height="match_parent"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="26dp"
            android:background="@drawable/asus_supernote_menu_press_selector"
            android:layout_gravity="center"
            android:maxLines="0"/>
    </LinearLayout>

</FrameLayout>