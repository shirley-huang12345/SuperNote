<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/edit_cover_dialog_width"
    android:layout_height="@dimen/edit_cover_dialog_height"
    android:orientation="vertical" >
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:layout_marginTop="20dp"
    android:layout_marginStart="27dp"
    android:layout_marginEnd="27dp"
    android:gravity="start"
    android:orientation="horizontal">
	    
	    <EditText
	        android:id="@+id/editcover_title"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:paddingStart="13dp"
	        android:singleLine="true"
	        android:imeOptions="actionDone"
	        android:textColor="#282929"
	        android:textSize="27sp"/>

 </LinearLayout> 
     <GridView
        android:id="@+id/editcover_gridview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:numColumns="4"
        android:paddingTop="6dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingBottom="30dp"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="18dp">
     </GridView>

</LinearLayout>