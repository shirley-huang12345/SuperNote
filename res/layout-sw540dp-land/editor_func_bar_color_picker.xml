<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="0dp"
    android:padding="0dp" >
    
    <LinearLayout
        android:id="@+id/color_picker_hint"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="start"
        android:layout_margin="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="0dp" >

        <ImageView
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/asus_absorb"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:maxWidth="400dp"
            android:gravity="center_vertical"
            android:text="@string/editor_color_picker"
            android:textColor="@color/note_editor_func_bar_text_color"
            android:textSize="20dp"
            android:maxLines="2"
	        android:ellipsize="end" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/color_chosen_show"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="start"
        android:layout_margin="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="0dp" 
        android:visibility="gone">

        <ImageView
            android:id="@+id/color_chosen"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/asus_color_picker_view"/>

        <TextView
            android:id="@+id/color_chosen_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:maxWidth="400dp"
            android:gravity="center_vertical"
            android:textColor="#2d2d2d"
            android:textSize="20sp" />

    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="end|center_vertical"
        android:orientation="horizontal">
        
        <ImageView 
            android:layout_width="1dp"
	        android:layout_height="26dp"
	        android:layout_gravity="center"
	        android:layout_marginEnd="10dp"
	        android:src="@color/function_bar_line_color"/>
        
        <Button
	        android:id="@+id/note_kb_color_cancel"
	        android:layout_width="34.5dp"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:background="@drawable/cancel_press_selector"/>
        
        <Button
	        android:id="@+id/note_kb_color_done"
	        android:layout_width="34.5dp"
	        android:layout_height="match_parent"
	        android:layout_marginStart="22dp"
	        android:layout_marginEnd="26dp"
	        android:gravity="center"
	        android:background="@drawable/done_press_selector"/>
        
    </LinearLayout>

</FrameLayout>
