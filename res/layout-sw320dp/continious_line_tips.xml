<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/continious_line_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <ImageView
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:background="@drawable/contiousline_step2" />
        
        <ImageView
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/hand_panel_view_height"
	        android:background="@drawable/contiousline_step1" />
        
    </LinearLayout>
    
    <ImageView
	        android:layout_width="2dp"
	        android:layout_height="@dimen/continious_line_tips_redline_height"
	        android:layout_gravity="end|bottom"
	        android:layout_marginEnd="@dimen/continious_line_tips_redline_margin_right"
	        android:src="#ff7234" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/continious_line_tips_desc_margin_top"
	    android:layout_marginStart="@dimen/continious_line_tips_desc_margin_left"
	    android:layout_marginEnd="@dimen/continious_line_tips_desc_margin_right"
	    android:layout_gravity="start"
	    android:orientation="vertical" >
	    
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="start"
	        android:gravity="start"
	        android:textSize="26dp"
	        android:textColor="#FF48C0EC"
	        android:text="@string/continious_line" />
	        
	    <TextView
	        android:id="@+id/continiouse_line_desc"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:maxWidth="274dp"
	        android:layout_gravity="start"
	        android:gravity="start"
	        android:singleLine="false"
	        android:textSize="19dp"
	        android:textColor="#FFFFFFFF"
	        android:text="@string/continious_line_desc1" />
	    
    </LinearLayout>
    
    <ImageView
        android:id="@+id/image_welcome1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/continious_line_tips_welcome1_margin_left"
        android:layout_marginTop="@dimen/continious_line_tips_welcome1_margin_top"
        android:src="@drawable/welcome_1" />
    
    <ImageView
        android:id="@+id/image_welcome2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/continious_line_tips_welcome2_margin_left"
        android:layout_marginTop="@dimen/continious_line_tips_welcome2_margin_top"
        android:src="@drawable/welcome_2"
        android:visibility="gone" />
    
    <Button
        android:id="@+id/btn_continue"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/continious_line_tips_continue_height"
        android:minWidth="@dimen/continious_line_tips_continue_min_width"
        android:background="@drawable/asus_oval_button_selector"
        android:textSize="@dimen/continious_line_tips_continue_text_size"
        android:textColor="#FFFFFFFF"
        android:layout_marginEnd="@dimen/continious_line_tips_continue_margin_right"
        android:layout_marginBottom="@dimen/continious_line_tips_continue_margin_bottom"
        android:layout_gravity="end|bottom"
        android:gravity="center"
        android:text="@string/text_continue" />

</FrameLayout>
