<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageView_inside"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|center_horizontal"
            android:clickable="true"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/pageCoverMask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|center_horizontal"
            android:scaleType="fitXY"/>
       <ImageButton
            android:id="@+id/replace_book"
            android:layout_width="@dimen/widget_btReplace_width"
            android:layout_height="32dp"
            android:layout_gravity="end|top"
            android:layout_marginTop="20dp"
            android:paddingEnd="16dp"
            android:background="@drawable/asus_supernote_new_bt_n_02_small"
            android:clickable="true"
            android:src="@drawable/asus_ep_icon_change"/>
	    <RelativeLayout
	        android:layout_width="135dp"
	    	android:layout_height="32dp"
	    	android:layout_marginBottom="20dp"
	    	android:layout_gravity="bottom|center"
   		    android:gravity="center|center"
	    	android:background="@drawable/asus_widget_supernote2_btn1">
			<ImageButton
				android:id="@+id/front_page"
	            android:layout_width="30dp"
	            android:layout_height="match_parent"
	            android:clickable="true"
	            android:scaleType="center"
	            android:layout_centerVertical="true"
	            android:layout_alignParentStart="true"
	            android:background="#00000000"
                android:src="@drawable/asus_widget_left_button_selector"
	            android:paddingStart="12dp"/>
			<TextView
		   	    android:id="@+id/textview_page_number"
		   	    android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_centerInParent="true"
		    	android:fontFamily="sans-serif"
		    	android:textSize="11dp"
		    	android:textColor="#646464"/>	
	    	<ImageButton
	            android:id="@+id/next_page"
	            android:layout_width="30dp"
	            android:layout_height="match_parent"
	            android:background="#00000000"
	            android:src="@drawable/asus_widget_right_button_selector"
	            android:scaleType="center"
	            android:layout_gravity="end|center"
	            android:layout_centerVertical="true"
	            android:layout_alignParentEnd="true"
		        android:paddingEnd="12dp"/>
		</RelativeLayout>
	</FrameLayout>
	
    <FrameLayout
        android:id="@+id/locked_book_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ImageView
	        android:id="@+id/imageView_locked_blank"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:clickable="true"
	        android:scaleType="fitXY"/>

	    <TextView
	        android:id="@+id/widget_addbook_tip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="240dp"
	        android:text="@string/widget_book_locked"
	        android:textColor="#ffffff"
	        android:textSize="27dp"
	        android:fontFamily="sans-serif"
	        android:alpha="0.8"/>
    </FrameLayout>
</FrameLayout>
