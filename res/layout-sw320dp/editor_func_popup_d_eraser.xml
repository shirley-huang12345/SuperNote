<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="203dp"
    android:layout_height="37dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/editor_func_eraser_3"
        android:layout_width="28dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/asus_eraser_point1_press_selector"
        android:scaleType="center">
    </ImageView>

    <ImageView
        android:id="@+id/editor_func_eraser_2"
        android:layout_width="28dp"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/asus_eraser_point2_press_selector"
        android:scaleType="center">
    </ImageView>

    <ImageView
        android:id="@+id/editor_func_eraser_1"
        android:layout_width="28dp"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/asus_eraser_point3_press_selector"
        android:scaleType="center">
    </ImageView>
    
    <ImageView
        android:id="@+id/clear_all"
        android:layout_width="28dp"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/asus_eraser_clear_press_selector"
        android:scaleType="center">
    </ImageView>
</LinearLayout>