<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/note_kb_scribble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mode_dropdown_selector1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/note_kb_keyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mode_dropdown_selector2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/note_kb_doodle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mode_dropdown_selector3"/>
    </LinearLayout>
</LinearLayout>