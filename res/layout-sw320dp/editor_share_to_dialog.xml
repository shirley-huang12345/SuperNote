<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="8dp"
   	android:paddingEnd="8dp"
   	android:paddingTop="5dp"
   	android:paddingBottom="5dp">

	<Spinner
	    android:id="@+id/spinner_preview_size"
	    android:layout_width="wrap_content"
	    android:layout_height="45dp"
	    android:layout_marginStart="24dp"
	    android:layout_gravity="start|center"/>
	
    <CheckBox
        android:id="@+id/dialog_hide_gridline"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="start|center"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/preview_hide_grid"
        android:textColor="#282929"
        android:textSize="18sp" />

    <ScrollView
        android:id="@+id/dialog_share_textRegionScrollView"
	    android:layout_width="fill_parent"
	    android:layout_height="85dp"
	    android:layout_marginStart="10dp"
	    android:layout_marginEnd="10dp"
	    android:orientation="vertical"
        android:visibility="gone">
	    <TextView
       	    android:id="@+id/dialog_share_textRegion"
       	    android:layout_width="fill_parent"
       	    android:layout_height="wrap_content"
            android:textColor="#282929"
            android:textSize="18sp"/>
    </ScrollView>
    
    <LinearLayout 
        android:id="@+id/linearLayout_only_share_text"
    	android:layout_width="match_parent"
    	android:layout_height="40dp"
    	android:orientation="vertical"
    	android:visibility="gone">
	    <CheckBox
            android:id="@+id/dialog_share_checkbox_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:gravity="center_vertical"
            android:text="@string/preview_text_only"
           android:textColor="#282929"
           android:textSize="18sp" />
	</LinearLayout>

</LinearLayout>