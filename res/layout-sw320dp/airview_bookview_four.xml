<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/AirView_BookView_Four_Width"
    android:layout_height="@dimen/AirView_BookView_Four_Height"
    android:layout_gravity="center">
      <LinearLayout
        android:id="@+id/airview_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/asus_airview_photo_board_light_bg">
        <LinearLayout 
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
            android:id="@+id/air1"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:src="@drawable/asus_airview_page_default"
             />
      <View android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#dcdcdc"/>
        <ImageView
            android:id="@+id/air2"
             android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:src="@drawable/asus_airview_page_default"
             />
        </LinearLayout>
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dcdcdc"/>
        <LinearLayout 
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            >
           <ImageView
            android:id="@+id/air3"
             android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/asus_airview_page_default"
            />
           <View android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#dcdcdc"/>
        <ImageView
            android:id="@+id/air4"
             android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/asus_airview_page_default"
             />
        </LinearLayout>
    </LinearLayout>
        <ImageView
        android:layout_width = "match_parent" 
        android:layout_height="match_parent"
        android:scaleType="fitXY"
         android:layout_gravity="center"
        android:background="@drawable/asus_airview_photo_board_light"
        />
        <ImageView
        android:id="@+id/airview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:background="#000000ff">    
    </ImageView>
          <ImageView
        android:id="@+id/arrowleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="center"
       android:layout_marginStart="@dimen/AirView_BookView_scroll_padding"
        android:src="@drawable/asus_airview_scroll_lft" />

    <ImageView
        android:id="@+id/arrowright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/AirView_BookView_scroll_padding"
        android:clickable="true"
        android:scaleType="center"
        android:src="@drawable/asus_airview_scroll_rit" />
</RelativeLayout>   