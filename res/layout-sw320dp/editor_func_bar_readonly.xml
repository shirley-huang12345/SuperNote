<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="53dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_gravity="start"
        android:layout_margin="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="0dp" >

        <ImageView
            android:layout_marginStart="12dp"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/asus_i"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:maxWidth="180dp"
            android:gravity="center_vertical"
            android:text="@string/editor_phone_readonly"
            android:textColor="@color/note_editor_func_bar_text_color"
            android:textSize="14dp"
            android:maxLines="2"
	        android:ellipsize="end" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_gravity="end|center_vertical"
        android:orientation="horizontal" >
        
        <Button
            android:id="@+id/note_kb_editabel"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@drawable/readonly_press_selector"
            android:layout_gravity="center"
            android:maxLines="0"/>
        
        <Button
            android:id="@+id/note_kb_more"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/asus_supernote_menu_press_selector"
            android:layout_gravity="center"
            android:maxLines="0"/>
    </LinearLayout>
</FrameLayout>