<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:paddingStart="13dp"
	    android:paddingEnd="13dp">
	
		<TextView android:id="@+id/version"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:ellipsize="end"
		    android:fontFamily="sans-serif"
		    android:textColor="#282929"
	        android:textSize="18dp"
	        android:layout_marginTop="20dp"/>
	
		<TextView android:id="@+id/legalInfoTitle"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="30dp"
		    android:ellipsize="end"
		    android:fontFamily="sans-serif"
		    android:textColor="#282929"
	        android:textSize="18dp"/>
	
		<TextView android:id="@+id/legalInfoContent"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="5dp"
		    android:ellipsize="end"
		    android:fontFamily="sans-serif"
		    android:textColor="#6b6b6b"
	        android:textSize="15dp"/>
	
		<TextView android:id="@+id/websiteTitle"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="30dp"
		    android:ellipsize="end"
		    android:fontFamily="sans-serif"
		    android:textColor="#282929"
	        android:textSize="18dp"/>
	
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="5dp"
		    android:text="@string/setting_about_url"
		    android:autoLink="web"
		    android:ellipsize="end"
		    android:fontFamily="sans-serif"
		    android:textColor="#6b6b6b"
	        android:textSize="15dp"/>
	
		<TextView android:id="@+id/allRight"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="30dp"
		    android:layout_marginBottom="2dp"
		    android:ellipsize="end"
		    android:fontFamily="sans-serif"
		    android:textColor="#848484"
	        android:textSize="12dp"
	        android:layout_gravity="center"/>
	</LinearLayout>
</ScrollView>