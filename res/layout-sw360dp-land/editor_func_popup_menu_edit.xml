<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <ScrollView 
       android:layout_width="match_parent"
       android:layout_height="218dp"
       android:scrollbars="none">
       
    <LinearLayout
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="vertical" >

    <LinearLayout 
        android:id="@+id/editor_menu_search_group"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical">
    	
    <TextView
        android:id="@+id/editor_menu_search"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingStart="15dp"
    	android:paddingEnd="15dp"
        android:gravity="center_vertical"
        android:background="@drawable/menu_item_selector"
        android:text="@string/editor_func_button_search"
        android:textSize="@dimen/editor_menu_text_size"
        android:textColor="#000000" />
    
    <ImageView				        
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_marginStart="1px"
        android:layout_marginEnd="1px"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:src="@color/menu_item_dividing_line_color"/>
    
    </LinearLayout>
        
    <TextView
        android:id="@+id/editor_menu_save"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingStart="15dp"
    	android:paddingEnd="15dp"
        android:gravity="center_vertical"
        android:background="@drawable/menu_item_selector"
        android:text="@string/editor_menu_savepage"
        android:textSize="@dimen/editor_menu_text_size"
        android:textColor="#000000" />
    
    <ImageView				        
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_marginStart="1px"
        android:layout_marginEnd="1px"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:src="@color/menu_item_dividing_line_color"/>
        
    <TextView
        android:id="@+id/editor_menu_delete"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingStart="15dp"
    	android:paddingEnd="15dp"
        android:gravity="center_vertical"
        android:background="@drawable/menu_item_selector"
        android:text="@string/editor_menu_rmpage"
        android:textSize="@dimen/editor_menu_text_size"
        android:textColor="#000000" />
    
    <ImageView				        
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_marginStart="1px"
        android:layout_marginEnd="1px"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:src="@color/menu_item_dividing_line_color"/>
        
    <TextView
        android:id="@+id/editor_menu_bookmark"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingStart="15dp"
    	android:paddingEnd="15dp"
        android:gravity="center_vertical"
        android:background="@drawable/menu_item_selector"
        android:text="@string/editor_menu_bookmark"
        android:textSize="@dimen/editor_menu_text_size"
        android:textColor="#000000" />
    
    <ImageView				        
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_marginStart="1px"
        android:layout_marginEnd="1px"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:src="@color/menu_item_dividing_line_color"/>
        
    <TextView
        android:id="@+id/editor_menu_read"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingStart="15dp"
    	android:paddingEnd="15dp"
        android:gravity="center_vertical"
        android:background="@drawable/menu_item_selector"
        android:text="@string/editor_menu_readonly"
        android:textSize="@dimen/editor_menu_text_size"
        android:textColor="#000000" />

   <ImageView				        
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_marginStart="1px"
        android:layout_marginEnd="1px"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:src="@color/menu_item_dividing_line_color"/>
   
   <LinearLayout 
        android:id="@+id/editor_menu_pen_group"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:visibility="gone">
   
    <CheckBox
        android:id="@+id/editor_menu_pen"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingStart="15dp"
    	android:paddingEnd="45dp"
        android:gravity="center_vertical"
        android:background="@drawable/menu_item_selector"
        android:text="@string/pen_only_enabled"
        android:textSize="@dimen/editor_menu_text_size"
        android:textColor="#000000"
        android:checked="false"/>
    
    <ImageView				        
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_marginStart="1px"
        android:layout_marginEnd="1px"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:src="@color/menu_item_dividing_line_color"/>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/editor_menu_read_later_group"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical">
    
	    <TextView
	        android:id="@+id/editor_menu_read_later"
	        android:layout_width="match_parent"
	        android:layout_height="45dp"
	        android:paddingStart="15dp"
	    	android:paddingEnd="15dp"
	        android:gravity="center_vertical"
	        android:background="@drawable/menu_item_selector"
	        android:text="@string/editor_menu_read_later"
	        android:textSize="@dimen/editor_menu_text_size"
	        android:textColor="#000000" />
	    
	    <ImageView				        
	        android:scaleType="fitXY"
	        android:layout_width="match_parent"
	        android:layout_marginStart="1px"
	        android:layout_marginEnd="1px"
	        android:layout_height="1px"
	        android:layout_gravity="center_horizontal"
	        android:src="@color/menu_item_dividing_line_color"/>
        
    </LinearLayout>
    
    <TextView
        android:id="@+id/editor_menu_share"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingStart="15dp"
    	android:paddingEnd="15dp"
        android:gravity="center_vertical"
        android:background="@drawable/menu_item_selector"
        android:text="@string/editor_menu_share"
        android:textSize="@dimen/editor_menu_text_size"
        android:textColor="#000000" />
    
    <ImageView				        
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_marginStart="1px"
        android:layout_marginEnd="1px"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:src="@color/menu_item_dividing_line_color"/>
        
    <TextView
        android:id="@+id/editor_menu_setting"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingStart="15dp"
    	android:paddingEnd="15dp"
        android:gravity="center_vertical"
        android:background="@drawable/menu_item_selector"
        android:text="@string/setting"
        android:textSize="@dimen/editor_menu_text_size"
        android:textColor="#000000" />
    
    </LinearLayout>
    </ScrollView>
</LinearLayout>
