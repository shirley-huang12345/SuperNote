<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="327dp"
    android:layout_height="270dp"
    android:gravity="center_horizontal"
    android:orientation="vertical" > 
       	
    <LinearLayout 
        android:layout_width="327dp"
    	android:layout_height="37dp"
    	android:orientation="horizontal">
    	
        <TextView 
		    android:layout_width="0dp"
		    android:layout_weight="1"
	      	android:layout_height="match_parent"
	      	android:layout_marginStart="16dp"
	      	android:gravity="start|center_vertical"
	     	android:text="@string/editor_pen_dialog_title"
	     	android:fontFamily="sans-serif"
	      	android:textSize="15sp"
			android:textColor="#505050"/>
        
    </LinearLayout>      
    
    <ImageView 
        android:layout_width="match_parent"
    	android:layout_height="1dp"
    	android:layout_marginStart="8dp"
    	android:layout_marginEnd="8dp"
    	android:src="@drawable/brush_popup_line_color"/>
    	
    <LinearLayout 
        android:id="@+id/brush_preview"
        android:layout_width="311dp"
    	android:layout_height="60dp"
    	android:layout_marginStart="8dp"
    	android:layout_marginEnd="8dp"
    	android:background="@drawable/brush_preview_dropdown_style"
    	android:orientation="horizontal">
    
        <Button 
            android:id="@+id/brush_library"
            android:layout_width="50dp"
	        android:layout_height="match_parent"
	        android:background="@drawable/no"
	        android:drawableBottom="@drawable/color_thickness_dropdown_style"
	        android:text="@string/brush_edit_dialog_library"
	        android:fontFamily="sans-serif-light"
	        android:textSize="13dp"
	        android:textColor="#505050"
	        android:paddingTop="2dp"
	        android:paddingBottom="5dp"/>
   	
		<ImageView
	        android:id="@+id/penpreview"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"/>
		
		<ImageButton
	        android:id="@+id/add_brush"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_marginEnd="2dp"
	        android:src="@drawable/asus_popup_pen_add"
	        android:background="@drawable/no" />
	
	</LinearLayout>
	
    <ImageView 
        android:layout_width="match_parent"
    	android:layout_height="1dp"
    	android:layout_marginStart="8dp"
    	android:layout_marginEnd="8dp"
    	android:src="@drawable/brush_popup_line_color"/>
	    
   <ScrollView 
       android:id="@+id/brush_color_thickness_layout"
       android:layout_width="match_parent"
       android:layout_height="172dp"
       android:scrollbars="none">
    	    
   <LinearLayout
        android:layout_width="327dp"
    	android:layout_height="wrap_content"
    	android:orientation="vertical" > 
	    <LinearLayout 
	        android:layout_width="327dp"
	    	android:layout_height="73dp"
	    	android:orientation="horizontal">
			
			<FrameLayout
			    android:layout_width="62dp"
			    android:layout_height="match_parent">
			    
			    <TextView 
			        android:id="@+id/select_brush_name"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_horizontal"
			        android:layout_marginTop="6dp"
			        android:textSize="12dp"
					android:textColor="#505050"/>
				<ImageButton
			        android:id="@+id/select_brush"
			        android:layout_width="wrap_content"		        
			        android:layout_height="wrap_content"
			        android:layout_marginTop="22dp"
			        android:layout_marginStart="5dp"
			        android:background="@drawable/asus_popup_pen_bg"/>
			</FrameLayout>
				    
			<LinearLayout 
	   	        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
		        android:orientation="vertical">
			    <LinearLayout 
		   	        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="2dp"
			        android:layout_marginBottom="10dp"
			        android:orientation="horizontal">
			        <TextView
			       	    android:layout_width="wrap_content"
			           	android:layout_height="wrap_content"
			           	android:layout_marginStart="12dp"		         
			           	android:singleLine="true"			           
			           	android:text="@string/newto_editor_func_popup_d_brush_stroke"
			           	android:fontFamily="sans-serif"
			           	android:textSize="12sp"
			           	android:textColor="#505050"/>
			        <TextView
			            android:id="@+id/stroke_width"
			       	    android:layout_width="wrap_content"
			           	android:layout_height="wrap_content"
			           	android:layout_marginStart="4dp"		         
			           	android:singleLine="true"		
			           	android:fontFamily="sans-serif"	           
			           	android:textSize="17sp"
			           	android:textColor="#505050"/>
			    </LinearLayout>
			    <LinearLayout 
		   	        android:layout_width="match_parent"
			        android:layout_height="20dp"
			        android:orientation="horizontal">
				    <ImageView
				        android:layout_width="wrap_content"		        
				        android:layout_height="wrap_content"
				        android:layout_marginStart="14dp"
				        android:src="@drawable/asus_pen_scrollbar_bg2_l_icon"/>
				    
				    <SeekBar
			           	android:id="@+id/seekbar_width"
			           	android:layout_width="212dp"
			           	android:layout_height="wrap_content"	
			         	android:progressDrawable="@android:color/transparent"						                    
			           	android:background="@drawable/asus_pen_scrollbar_bg2"    
						android:thumb="@drawable/asus_pen_scrollbar_btn" />
				           	
				    <ImageView
				        android:layout_width="wrap_content"		        
				        android:layout_height="wrap_content"
				        android:src="@drawable/asus_pen_scrollbar_bg2_r_icon"/>
			    </LinearLayout>
			</LinearLayout>
		</LinearLayout>
		
	    <ImageView 
	        android:layout_width="match_parent"
	    	android:layout_height="1dp"
	    	android:layout_marginStart="8dp"
	    	android:layout_marginEnd="8dp"
	    	android:src="@drawable/brush_popup_line_color"/>
	        
		<LinearLayout
		    android:id="@+id/brush_select_layout"
	   		android:layout_width="327dp"
			android:layout_height="62dp" 
			android:gravity="center_vertical"
			android:orientation="horizontal"  >  
			
		    <ImageView
	            android:id="@+id/editor_func_d_brush_sketch"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginStart="8dp"
	            android:background="@drawable/image_background_style"
	            android:src="@drawable/asus_popup_pen1" />
	        	       
		    <ImageView
	            android:id="@+id/editor_func_d_brush_scribble"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/image_background_style"
	            android:src="@drawable/asus_popup_pen2" />
					
	        <ImageView
	            android:id="@+id/editor_func_d_brush_normal"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"				           
	            android:background="@drawable/image_background_style"
	            android:scaleType="fitXY"
	            android:src="@drawable/asus_popup_pen3" />

	        <ImageView
	            android:id="@+id/editor_func_d_brush_markpen"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"				            
	            android:background="@drawable/image_background_style"
	            android:src="@drawable/asus_popup_pen4" />
					        		
	        <ImageView
	            android:id="@+id/editor_func_d_brush_writingbrush"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/image_background_style"
	            android:src="@drawable/asus_popup_pen5" />
			        
	        <ImageView
	           	android:id="@+id/editor_func_d_brush_mark"
	           	android:layout_width="wrap_content"
	           	android:layout_height="wrap_content"				           	
	           	android:background="@drawable/image_background_style"		            
	           	android:src="@drawable/asus_popup_pen6" />
					              
		</LinearLayout>
		
		<ImageView 
	        android:layout_width="match_parent"
	    	android:layout_height="1dp"
	    	android:layout_marginStart="8dp"
	    	android:layout_marginEnd="8dp"
	    	android:src="@drawable/brush_popup_line_color"/>
			    
		<LinearLayout 
	        android:layout_width="327dp"
	    	android:layout_height="73dp"
	    	android:orientation="horizontal">
			
			<FrameLayout
			    android:layout_width="69dp"
			    android:layout_height="match_parent">
			    
			    <TextView 
			        android:id="@+id/select_color_name"
			        android:layout_width="match_parent"
			        android:layout_height="42dp"
			        android:gravity="center|center"
			        android:layout_marginTop="0dp"
			        android:fontFamily="sans-serif-light"
			        android:textSize="11dp"
					android:textColor="#505050"/>
				<ImageButton
			        android:id="@+id/select_color"
			        android:layout_width="45dp"		        
			        android:layout_height="28dp"
			        android:layout_marginStart="12dp"
			        android:layout_marginTop="41dp"/>
			</FrameLayout>
				    
			<LinearLayout 
	   	        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
		        android:orientation="vertical">
			    <LinearLayout 
		   	        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="5dp"
			        android:layout_marginBottom="10dp"
			        android:orientation="horizontal">
			        <TextView
			            android:id="@+id/alpha_text"
			       	    android:layout_width="wrap_content"
			           	android:layout_height="wrap_content"
			           	android:layout_marginStart="4dp"		         
			           	android:singleLine="true"			           
			           	android:text="@string/newto_editor_func_popup_d_brush_alpha"
			           	android:fontFamily="sans-serif"
			           	android:textSize="12sp"
			           	android:textColor="#505050"/>
			        <TextView
			            android:id="@+id/alpha_percentage"
			       	    android:layout_width="wrap_content"
			           	android:layout_height="wrap_content"
			           	android:layout_marginStart="4dp"		         
			           	android:singleLine="true"	
			           	android:fontFamily="sans-serif"		           
			           	android:textSize="17sp"
			           	android:textColor="#505050"/>
			    </LinearLayout>
			    <LinearLayout 
		   	        android:layout_width="match_parent"
			        android:layout_height="20dp"
			        android:orientation="horizontal">
				    <ImageView
				        android:layout_width="wrap_content"		        
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_vertical"
				        android:layout_marginStart="3dp"
				        android:src="@drawable/asus_pen_scrollbar_bg_l_icon"/>
				    
				    <SeekBar
			           	android:id="@+id/seekbar_Alpha"
			           	android:layout_width="208dp"
			           	android:layout_height="wrap_content"			
			         	android:progressDrawable="@android:color/transparent"			                    
			           	android:background="@drawable/asus_pen_scrollbar_bg"    
						android:thumb="@drawable/asus_pen_scrollbar_btn" />
				           	
				    <ImageView
				        android:layout_width="wrap_content"		        
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_vertical"
				        android:src="@drawable/asus_pen_scrollbar_bg_r_icon"/>
			    </LinearLayout>
			</LinearLayout>
		</LinearLayout>
			
		<LinearLayout
		    android:id="@+id/color_select_layout"
		    android:layout_width="327dp"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
			
		    <ImageView 
		        android:layout_width="match_parent"
		    	android:layout_height="1dp"
		    	android:layout_marginStart="8dp"
		    	android:layout_marginEnd="8dp"
		    	android:src="@drawable/brush_popup_line_color"/>
			
			<LinearLayout
			    android:layout_width="327dp"
		        android:layout_height="35.33dp"
		        android:layout_marginTop="6dp"
		        android:orientation="horizontal" >
		
				<ImageView
				    android:id="@+id/editor_func_color_A"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginStart="10dp"
		    		android:scaleType="fitXY"
				    android:layout_gravity="center"
				    android:background="#ffffff"
				    android:src="@drawable/asus_color_frame_n" />
		
				<ImageView
				    android:id="@+id/editor_func_color_B"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginStart="10dp"
		    		android:scaleType="fitXY"
				    android:layout_gravity="center"
				    android:background="#b4b4b4"
				    android:src="@drawable/asus_color_frame_n" />
			
			    <ImageView
			        android:id="@+id/editor_func_color_C"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginStart="10dp"
		    		android:scaleType="fitXY"
			        android:background="#5a5a5a"
			        android:layout_gravity="center"
			        android:src="@drawable/asus_color_frame_n" />
			
				<ImageView
				    android:id="@+id/editor_func_color_D"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginStart="10dp"
		    		android:scaleType="fitXY"
				    android:layout_gravity="center"
				    android:background="#000000"
				    android:src="@drawable/asus_color_frame_n" />
			
				<ImageView      
				    android:id="@+id/editor_func_color_E"         
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginStart="10dp"
				    android:layout_gravity="center"
		    		android:scaleType="fitXY"
				    android:background="#e70012"
				    android:src="@drawable/asus_color_frame_n" />
			
				<ImageView      
				    android:id="@+id/editor_func_color_F"         
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginStart="10dp"
		    		android:scaleType="fitXY"
				    android:layout_gravity="center"
				    android:background="#ff9900"
				    android:src="@drawable/asus_color_frame_n" />
				
				<ImageView      
				    android:id="@+id/editor_func_color_G"         
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginStart="10dp"
		    		android:scaleType="fitXY"
				    android:layout_gravity="center"
				    android:background="#fff100"
				    android:src="@drawable/asus_color_frame_n" />
			</LinearLayout>
		       		
			<LinearLayout
			    android:layout_width="327dp"
			    android:layout_height="35.33dp"
			    android:layout_marginTop="9dp"
			    android:orientation="horizontal" >      			    
		
		        <ImageView
		            android:id="@+id/editor_func_color_H"         
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginStart="10dp"
		    		android:scaleType="fitXY"
		            android:background="#8fc31f"
		            android:layout_gravity="center"
		            android:src="@drawable/asus_color_frame_n" />
		
		        <ImageView
		            android:id="@+id/editor_func_color_I"         
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginStart="10dp"
		    		android:scaleType="fitXY"
		            android:layout_gravity="center"
		            android:background="#009944"
		            android:src="@drawable/asus_color_frame_n" />
		
		        <ImageView
		            android:id="@+id/editor_func_color_J"         
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginStart="10dp"
		    		android:scaleType="fitXY"
		            android:layout_gravity="center"
		            android:background="#00a0e9"
		            android:src="@drawable/asus_color_frame_n" />
		
		        <ImageView
		            android:id="@+id/editor_func_color_K"         
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginStart="10dp"
		    		android:scaleType="fitXY"
		            android:layout_gravity="center"
		            android:background="#1d2088"
		            android:src="@drawable/asus_color_frame_n" />
		
		        <ImageView
		            android:id="@+id/editor_func_color_M"         
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginStart="10dp"
		            android:scaleType="fitXY"
		            android:layout_gravity="center"
		            android:background="#e5007f"
		            android:src="@drawable/asus_color_frame_n" />
		        
		        <ImageView
				    android:id="@+id/editor_func_color_L"         
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginStart="10dp"
				    android:layout_gravity="center"
		    		android:scaleType="fitXY"
				    android:background="@drawable/color_rainbow"
				    android:src="@drawable/asus_color_frame_n" />
		        
		        <ImageView
				    android:id="@+id/editor_func_color_straw"         
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginStart="10dp"
				    android:layout_gravity="center"
		    		android:scaleType="fitXY"
				    android:background="@drawable/color_straw_button_style"/>
			</LinearLayout>	
		    
		    <LinearLayout
			    android:layout_width="327dp"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="9dp"
			    android:layout_marginBottom="12dp"
			    android:orientation="horizontal" >
		    	   
			    <com.asus.supernote.ui.ColorPickerViewCustom
					android:id="@+id/color_picker_view"        
					android:layout_width="307dp"
					android:layout_height="70dp" 
					android:layout_marginStart="10dp" 
					android:background="@drawable/asus_color_frame_big"/>
		
			 </LinearLayout>
	 	</LinearLayout>
 	</LinearLayout>
 	
    </ScrollView>
 	
   	<ListView 
   	    android:id="@+id/brush_library_view"
   	    android:layout_width="311dp"
    	android:layout_height="172dp"
    	android:layout_marginTop="1px"
		android:divider="#aeadad"
		android:dividerHeight="1px" 
		android:fadingEdgeLength="13dp"
        android:requiresFadingEdge="vertical"
        android:visibility="gone" />
</LinearLayout>