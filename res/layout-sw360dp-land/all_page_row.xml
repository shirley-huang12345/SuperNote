<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/all_page_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="21dp"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="10dp">

    	<LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
        
        <ImageView 
            android:id="@+id/all_page_bookmark"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="start|center_vertical"
        	android:layout_marginEnd="6dp"
        	android:background="@drawable/asus_bookmark_ic"
        	android:visibility="gone"/>

        <TextView
            android:id="@+id/all_page_title_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:singleLine="true"
            android:maxWidth="200dp"
            android:textStyle="bold"
            android:textColor="#7f7e7e"
            android:textSize="14sp" />
		</LinearLayout>
        <TextView
            android:id="@+id/all_page_title_book_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:textColor="#7f7e7e"
            android:singleLine="true"
            android:maxWidth="100dp"
            android:textSize="13sp" />
        
        <ImageView 
            android:layout_width="match_parent"
        	android:layout_height="1dp"
        	android:layout_gravity="bottom|center_horizontal"
        	android:background="#a1a0a0"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/all_page_item_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal" >

        <include 
            android:id="@+id/all_page_1"
            layout="@layout/page_item" />
        <View
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:visibility="invisible"/>
        <include
            android:id="@+id/all_page_2"
            layout="@layout/page_item" />
        <View
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:visibility="invisible"/>
        <include
            android:id="@+id/all_page_3"
            layout="@layout/page_item" />
        <View
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:visibility="invisible"/>
        <include
            android:id="@+id/all_page_4"
            layout="@layout/page_item" />

    </LinearLayout>

</LinearLayout>