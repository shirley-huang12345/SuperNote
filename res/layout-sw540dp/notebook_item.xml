<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/notebook_item_width"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="@dimen/notebook_item_width"
        android:layout_height="@dimen/notebook_item_height" >

		<ImageView
            android:id="@+id/notebook_cover"
            android:layout_width="@dimen/notebook_item_width"
            android:layout_height="@dimen/notebook_item_height"
            android:layout_gravity="start|bottom"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/page_cover"
            android:layout_width="@dimen/notebook_item_width"
            android:layout_height="@dimen/notebook_item_height"
            android:layout_gravity="start|bottom"
            android:scaleType="fitXY"
            android:src="#555555" />

		<ImageView
            android:id="@+id/page_preview"
            android:layout_width="@dimen/notebook_item_width"
            android:layout_height="@dimen/notebook_item_height"
            android:layout_gravity="start|bottom"
            />
		
		<ImageView
            android:layout_width="@dimen/notebook_item_width"
            android:layout_height="@dimen/notebook_item_height"
            android:background="@drawable/notebook_item_border" />		        
		
		<ImageView
            android:id="@+id/page_check"
            android:layout_width="@dimen/notebook_item_width"
            android:layout_height="@dimen/notebook_item_height"
            android:background="@drawable/asus_icon_c"
            android:visibility="gone"/>	
		
		<LinearLayout 
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="9dp"
			android:orientation="horizontal">
		    
		    <ImageView
	            android:id="@+id/page_private"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"            
	            android:layout_marginStart="9dp"
	            android:scaleType="fitXY"
	            android:src="@drawable/asus_supernote_lock" />
		    
		    <ImageView
	            android:id="@+id/page_cloud"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"            
	            android:layout_marginStart="9dp"
	            android:scaleType="fitXY"
	            android:src="@drawable/asus_supernote_cloud" />
		    
		</LinearLayout>
            
        <ImageView
            android:id="@+id/page_cover_mask"
            android:layout_width="@dimen/notebook_item_width"
            android:layout_height="@dimen/notebook_item_height"
            android:layout_gravity="start|bottom"
            android:clickable="true"
            android:src="@drawable/asus_ep_page_pressed_selector" />
    </FrameLayout>
    
    	<LinearLayout
            android:layout_width="@dimen/notebook_item_width"
            android:layout_height="wrap_content"    
            android:layout_marginTop="9dp">

            <TextView
                android:id="@+id/page_count"
                android:layout_width="@dimen/notebook_item_name_width"
                android:layout_height="wrap_content"                            
                android:ellipsize="end"
                android:maxLines="1"	                
                android:textColor="#2c2c2c"
                android:textSize="20dp"
                android:fontFamily="sans-serif-light" />
            
        </LinearLayout>
		<FrameLayout 
		    android:layout_width="@dimen/notebook_item_width"
		    android:layout_height="wrap_content"       
		    android:layout_marginTop="6dp">		    
		
			<TextView
	            android:id="@+id/page_date"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#797979"
	            android:textSize="16dp"
	            android:fontFamily="sans-serif" />
			<ImageView
             	android:id="@+id/book_pad_or_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="5dp"/>
		
		</FrameLayout>

</LinearLayout>