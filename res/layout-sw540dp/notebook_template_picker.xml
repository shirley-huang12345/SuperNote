<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="524dp"
    android:layout_height="908dp"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/chooseTemplateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/choose_a_template"
        android:textSize="15dp"
        android:textStyle="bold" 
        android:visibility="gone"/><!--add by noah for share  -->
  <LinearLayout
    android:id="@+id/notebook_name_layout"
    android:layout_width="494dp"
    android:layout_height="68dp"
    android:layout_marginTop="7dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:orientation="horizontal">

        <com.asus.supernote.picker.BookNameEditText
	        android:id="@+id/nb_name"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:paddingStart="16dp"
	        android:hint="@string/nb_name_hint"
	        android:imeOptions="actionDone"
	        android:singleLine="true"
	        android:textColor="#282929"
	        android:textSize="20sp"/>    
	        
        <Spinner 
            android:id="@+id/pagesize_spinner"
	        android:layout_width="32dp"
	        android:layout_height="32dp"
	        android:layout_marginStart="10dp"
	        android:layout_marginEnd="5dp"
	        android:layout_gravity="center_vertical"
	        android:spinnerMode="dialog"
	        android:background="@null"/>
 </LinearLayout> 

   <LinearLayout
        android:id="@+id/content_search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
    	android:layout_marginStart="12dp"
    	android:layout_marginEnd="12dp"
        android:orientation="vertical" >
        
        <LinearLayout
            android:layout_width="match_parent"
        	android:layout_height="41dp"
        	android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/content_search_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:checked="true" >
        </CheckBox>

        <TextView
            android:id="@+id/language_textview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="@string/content_search"
            android:textSize="20sp"
            android:textColor="#282929" />        
        </LinearLayout>
        
        <Spinner
            android:id="@+id/language_spanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="5dp"
    		android:layout_marginEnd="5dp"
            android:paddingStart="5dp"
	        android:paddingTop="5dp"
	        android:paddingBottom="5dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/asus_spinner_ab_light">   
        </Spinner>
    </LinearLayout>
     <GridView
        android:id="@+id/template_gridview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:numColumns="3"
        android:paddingTop="26dp"
        android:paddingStart="17dp"
        android:paddingEnd="17dp"
        android:paddingBottom="10dp"
        android:horizontalSpacing="20dp"
        android:verticalSpacing="13dp">
     </GridView>  

</LinearLayout>