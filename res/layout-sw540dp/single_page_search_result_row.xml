<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/Search_title_layout"
        android:layout_width="fill_parent"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="#FFEDEDED"
        android:layout_height="42dp" >

        <TextView
            android:id="@+id/Search_page_title_book_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"  
            android:layout_marginStart="20dp"     
            android:layout_marginEnd="170dp"         
            android:singleLine="true"
            android:background="@null"
            android:textColor="#FF777777"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/Search_page_title_book_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"            
            android:singleLine="true"
            android:maxWidth="110dp"
            android:layout_marginEnd="20dp"         
            android:background="@null"
            android:textColor="#FF777777"
            android:textSize="20dp" />
    </FrameLayout>
    
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:src="#FF747474"
            android:scaleType="fitXY"
            />


    <FrameLayout
        android:id="@+id/Search_item_layout"
        android:layout_width="fill_parent"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_height="56dp" 
        android:background="@drawable/page_search_bg_selector"
        android:clickable="true">
        
	     <TextView
	         android:id="@+id/Search_editText"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="start|center_vertical"
	         android:background="@null"
	         android:singleLine="true"
	         android:textColor="#FF000000"
	         android:layout_marginStart="50dp"
	         android:layout_marginEnd="170dp"
	         android:paddingTop="3dp"
	         android:textSize="@dimen/page_search_result_fontsize" />
        
   	     <TextView
	         android:id="@+id/Search_pageIndex"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="end|center_vertical"
             android:singleLine="true"
             android:layout_marginEnd="40dp"
             android:maxWidth="110dp"
	         android:background="@null"
	         android:textColor="#FF000000"
	         android:paddingTop="3dp"
	         android:textSize="@dimen/page_search_result_fontsize" />
    </FrameLayout>
                    
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:src="#FF747474"
            android:scaleType="fitXY"
            />
</LinearLayout>