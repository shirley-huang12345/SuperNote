<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="228dp"
    android:layout_height="43dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/editor_func_eraser_3"
        android:layout_width="31.5dp"
        android:layout_height="31.5dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/asus_eraser_point1_press_selector"
        android:scaleType="center">
    </ImageView>

    <ImageView
        android:id="@+id/editor_func_eraser_2"
        android:layout_width="31.5dp"
        android:layout_height="31.5dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/asus_eraser_point2_press_selector"
        android:scaleType="center">
    </ImageView>

    <ImageView
        android:id="@+id/editor_func_eraser_1"
        android:layout_width="31.5dp"
        android:layout_height="31.5dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/asus_eraser_point3_press_selector"
        android:scaleType="center">
    </ImageView>
    
    <ImageView
        android:id="@+id/clear_all"
        android:layout_width="31.5dp"
        android:layout_height="31.5dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/asus_eraser_clear_press_selector"
        android:scaleType="center">
    </ImageView>
</LinearLayout>