<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/brush_library_item_selector"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/brush_image"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginStart="4dp"
        android:layout_gravity="center_vertical"/>
    
   	<ImageView
        android:id="@+id/brush_preview"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="69dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_vertical"/>
   	
   	<ImageButton
        android:id="@+id/remove_brush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="2dp"
        android:src="@drawable/asus_popup_pen_delete"
        android:background="@drawable/no"/>

</LinearLayout>
