<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp">
        
        <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
        
        <ImageView 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="start|center_vertical"
        	android:layout_marginStart="7dp"
        	android:layout_marginEnd="9dp"
        	android:background="@drawable/asus_bookmark_ic"/>

        <TextView
            android:id="@+id/title_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:maxWidth="213dp"
            android:singleLine="true"
            android:textStyle="bold"
            android:textColor="#7f7e7e"
            android:textSize="20sp" />
		</LinearLayout>
        <TextView
            android:id="@+id/title_book_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:textColor="#7f7e7e"
            android:textSize="19sp" />
        
        <ImageView 
            android:layout_width="1215dp"
        	android:layout_height="1dp"
        	android:layout_gravity="bottom|center_horizontal"
        	android:background="#a1a0a0"/>
    </FrameLayout>

    <GridView
        android:id="@+id/page_gridview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:fadingEdgeLength="13dp"
        android:horizontalSpacing="@dimen/notebook_gridview_horizontal_spacing"
        android:numColumns="6"
        android:requiresFadingEdge="vertical"
        android:verticalSpacing="24dp" />

</LinearLayout>