<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="74dp"
    android:background="@drawable/asus_todo_widget_list"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/todo_widget_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:background="@null"
        android:layout_gravity="start|center_vertical" />
   
    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="14dp"
        android:layout_weight="1"
        android:orientation="vertical" >
                     
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:minHeight="20dp"
            android:gravity="bottom"
            android:layout_gravity="bottom"> 
        <ImageView
            android:id="@+id/todo_widget_item_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:scaleType="matrix"/>
        
        <ImageView
            android:id="@+id/todo_widget_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/todo_widget_item_priority"
            android:scaleType="matrix"/>
            
        </RelativeLayout>
		
        <TextView
            android:id="@+id/todo_widget_item_time_textview"
            android:layout_marginTop="-2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#787878"
            android:textSize="18sp"
            android:fontFamily="sans-serif" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/todo_widget_delete_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@null"
        android:layout_gravity="center_vertical" 
        android:src="@drawable/asus_memo_widget_delete">
    </ImageButton>

</LinearLayout>