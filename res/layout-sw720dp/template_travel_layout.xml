<?xml version="1.0" encoding="utf-8"?>
<com.asus.supernote.template.TemplateLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/templateTravellayout"
    android:layout_width="@dimen/edit_area_width_pad"
    android:layout_height="473dp"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="@dimen/edit_area_width_pad"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.asus.supernote.template.TemplateImageView
                android:id="@+id/travel_image"
                android:layout_width="fill_parent"
                android:layout_height="430dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/pf_p_picture_l_pad" />

            <RelativeLayout
                android:id="@+id/travel_date"
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top"
                android:layout_marginTop="32dp"
                android:background="@drawable/asus_diary_edit_bg"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/travel_date_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="36dp"
                    android:src="@drawable/asus_diary_edit_ic" />

                <com.asus.supernote.template.TemplateEditText
                    android:id="@+id/travel_date_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="end|center_vertical"
                    android:layout_marginEnd="15dp"
                    android:layout_toStartOf="@+id/travel_date_ic"
                    android:focusable="false"
                    android:fontFamily="Roboto"
                    android:hint="@string/template_travel_tips_date"
                    android:singleLine="false"
                    android:textColorHint="@color/diary_template_date_font_color"
                    android:textColor="@color/diary_template_date_font_color"
                    android:textSize="18dp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/travel_image_edit"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_gravity="bottom"
                android:background="#19000000"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="Roboto"
                    android:singleLine="false"
                    android:text="@string/template_travel_change_photos"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:textStyle="italic" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/asus_diary_camera_ic" />
            </LinearLayout>
        </FrameLayout>

        <com.asus.supernote.template.TemplateEditText
            android:id="@+id/travel_title_edit"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/template_travel_titleheight"
            android:layout_gravity="center_horizontal"
            android:fontFamily="Roboto"
            android:hint="@string/template_travel_tips_title"
            android:imeOptions="flagNoFullscreen"
            android:singleLine="true"
            android:textColorHint="#46b3f5"
            android:textCursorDrawable="@drawable/cursor3px_50px"
            android:textSize="@dimen/font_size"
            android:textStyle="italic" />
    </LinearLayout>

</com.asus.supernote.template.TemplateLayout>