<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_gravity="start|center_vertical"
        android:orientation="horizontal">

         <Button
	            android:id="@+id/note_kb_scribble"
	            android:layout_width="62dp"
	            android:layout_height="match_parent"
	            android:layout_marginStart="24dp"
	            android:background="@drawable/scribble_mode_selector"
	            android:gravity="center_horizontal"
	            android:maxLines="0"
	            android:text="@string/editor_func_button_scribble"/>
	
	        <Button
	            android:id="@+id/note_kb_keyboard"
	            android:layout_width="62dp"
	            android:layout_height="match_parent"
	            android:background="@drawable/type_mode_selector"
	            android:gravity="center_horizontal"
	            android:maxLines="0"
	            android:text="@string/editor_func_button_keyboard"/>
	
	        <Button
	            android:id="@+id/note_kb_doodle"
	            android:layout_width="62dp"
	            android:layout_height="match_parent"
	            android:background="@drawable/doodle_mode_selector"
	            android:gravity="center_horizontal"
	            android:maxLines="0"
	            android:text="@string/editor_func_button_doodle"/>

        <Button
            android:id="@+id/note_kb_color_bold"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_marginStart="36dp"
            android:background="@drawable/function_bar_item_press_selector"
            android:layout_gravity="center"
            android:maxLines="0"
            android:text="@string/editor_func_button_color" />
        
        <ToggleButton
            android:id="@+id/note_kb_write_to_type"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_marginStart="36dp"
            android:background="@drawable/recognize_press_selector"
            android:layout_gravity="center"
            android:maxLines="0"
            android:textOn="@string/editor_func_button_recognize"
            android:textOff="@string/editor_func_button_recognize" />
                
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_gravity="end|center_vertical"
        android:orientation="horizontal">  
        
        <Button
            android:id="@+id/note_kb_undo"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/undo_press_selector"
            android:layout_gravity="center"
            android:maxLines="0"
            android:text="@string/editor_func_button_undo" />
     
  		<Button
            android:id="@+id/note_kb_redo"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:background="@drawable/redo_press_selector"
            android:layout_gravity="center"
            android:maxLines="0"
            android:text="@string/editor_func_button_redo" />   
            
  		<Button
            android:id="@+id/note_kb_s_more"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/asus_supernote_menu_press_selector"
            android:layout_gravity="center"
            android:maxLines="0"/>
    </LinearLayout>
</FrameLayout>