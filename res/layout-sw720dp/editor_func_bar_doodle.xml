<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:padding="0dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_gravity="start|center_vertical"
        android:orientation="horizontal">
     	
         <Button
	            android:id="@+id/note_kb_scribble"
	            android:layout_width="62dp"
	            android:layout_height="match_parent"
	            android:layout_marginStart="24dp"
	            android:background="@drawable/scribble_mode_selector"
	            android:gravity="center_horizontal"
	            android:maxLines="0"
	            android:text="@string/editor_func_button_scribble"/>
	
	        <Button
	            android:id="@+id/note_kb_keyboard"
	            android:layout_width="62dp"
	            android:layout_height="match_parent"
	            android:background="@drawable/type_mode_selector"
	            android:gravity="center_horizontal"
	            android:maxLines="0"
	            android:text="@string/editor_func_button_keyboard"/>
	
	        <Button
	            android:id="@+id/note_kb_doodle"
	            android:layout_width="62dp"
	            android:layout_height="match_parent"
	            android:background="@drawable/doodle_mode_selector"
	            android:gravity="center_horizontal"
	            android:maxLines="0"
	            android:text="@string/editor_func_button_doodle"/>
        
     	<Button
            android:id="@+id/note_kb_d_brush"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_marginStart="36dp"
            android:layout_gravity="center"
            android:background="@drawable/function_bar_item_press_selector"
            android:maxLines="0"
            android:text="@string/editor_func_button_brush" />
     	
     	<Button
            android:id="@+id/note_kb_d_eraser"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_marginStart="36dp"
            android:layout_gravity="center"
            android:drawableTop="@drawable/asus_supernote_function_eraser2"
            android:background="@drawable/function_bar_item_press_selector"
            android:maxLines="0"
            android:text="@string/editor_func_button_eraser" />
     	
     	<ToggleButton
            android:id="@+id/note_kb_d_shape"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_marginStart="36dp"
            android:background="@drawable/transform_press_selector"
            android:layout_gravity="center"
            android:maxLines="0"
            android:textOn="@string/editor_func_button_transform"
            android:textOff="@string/editor_func_button_transform" />
      	
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_gravity="end|center_vertical"
        android:orientation="horizontal">
        
        <Button
            android:id="@+id/note_kb_undo"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/undo_press_selector"
            android:layout_gravity="center"
            android:maxLines="0"
            android:text="@string/editor_func_button_undo" />
     
  		<Button
            android:id="@+id/note_kb_redo"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:background="@drawable/redo_press_selector"
            android:layout_gravity="center"
            android:maxLines="0"
            android:text="@string/editor_func_button_redo" />
  		
  		<Button
            android:id="@+id/note_kb_d_more"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/asus_supernote_menu_press_selector"
            android:layout_gravity="center"
            android:maxLines="0"/>
    </LinearLayout>
</FrameLayout>