<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="208dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/account_sign_out"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:text="@string/sync_sign_off"
        android:textSize="18dp"
        android:textColor="#000000" />
    
    <ImageView				        
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_marginStart="1px"
        android:layout_marginEnd="1px"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:src="@color/menu_item_dividing_line_color"/>
    
    <TextView
        android:id="@+id/sync_book_list"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:text="@string/bookpicker_sync_books_list"
        android:textSize="18dp"
        android:textColor="#000000" />
    
    <ImageView				        
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_marginStart="1px"
        android:layout_marginEnd="1px"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:src="@color/menu_item_dividing_line_color"/>
        
    <TextView
        android:id="@+id/account_sync_settings"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:text="@string/account_and_sync"
        android:textSize="18dp"
        android:textColor="#000000" />

</LinearLayout>
