<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <Button
        android:id="@+id/book_select_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="-5dp"
        android:singleLine="true"
        android:paddingEnd="20dp"
        android:layout_gravity="start|center_vertical"
        android:textColor="@color/action_bar_text_color"
        android:textSize="@dimen/action_mode_title_text_size"
        android:background="@drawable/spinner_background_holo_light" />
	
	 <RelativeLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:layout_marginEnd="16dp"
	    android:gravity="center_vertical">
	    
	    <ImageButton
	        android:id="@+id/book_picker_ok"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/editor_func_button_done"
	        android:maxLines="0"
	        android:gravity="center"
	        android:background="@drawable/asus_ic_done"
	        android:layout_alignParentEnd="true"/>
	    
	    <ImageView 
	        android:id="@+id/dividing_line"
	        android:layout_width="2dp"
	        android:layout_height="22dp"
	        android:layout_marginEnd="15dp"
	       android:layout_marginTop="5dp"
	        android:src="@color/action_bar_text_color"
	        android:layout_toStartOf="@+id/book_picker_ok"/>
	
	    <ImageButton
	        android:id="@+id/book_picker_cancel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginEnd="15dp"
	        android:text="@string/editor_func_button_cancle"
	        android:maxLines="0"
	        android:gravity="center"
	        android:background="@drawable/asus_ic_cancel"
	        android:layout_toStartOf="@+id/dividing_line"/>
	
	</RelativeLayout>
            
</FrameLayout>