<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="147dp"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/todo_priority_high"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="#eb5546"
        android:orientation="horizontal">
        
        <ImageView 
            android:id="@+id/todo_priority_high_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="15dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/asus_memo_popup_select"
            android:visibility="invisible"/>
        
        <TextView
            android:id="@+id/todo_priority_high_text"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#ffffff"
            android:textSize="20sp"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/todo_priority_normal"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="8dp"
        android:background="#b4b4b4"
        android:orientation="horizontal">
        
        <ImageView 
            android:id="@+id/todo_priority_normal_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="15dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/asus_memo_popup_select"
            android:visibility="invisible"/>
        
        <TextView
            android:id="@+id/todo_priority_normal_text"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#ffffff"
            android:textSize="20sp"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/todo_priority_low"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="7dp"
        android:background="#5fc9e1"
        android:orientation="horizontal">
        
        <ImageView 
            android:id="@+id/todo_priority_low_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="15dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/asus_memo_popup_select"
            android:visibility="invisible"/>
        
        <TextView
            android:id="@+id/todo_priority_low_text"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#ffffff"
            android:textSize="20sp"/>
        
    </LinearLayout>

</LinearLayout>